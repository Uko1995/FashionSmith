{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": ["client/src/**/*", "server/**/*"],
  "exclude": [
    "node_modules",
    "client/node_modules",
    "server/node_modules",
    "client/dist",
    "server/dist"
  ]
}
