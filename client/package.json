{
  "name": "fashionsmith-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "FashionSmith - Premium Custom Tailoring & Bespoke Clothing Frontend",
  "keywords": [
    "fashion",
    "tailoring",
    "bespoke",
    "custom clothing",
    "react",
    "vite"
  ],
  "author": "FashionSmith Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && npx vite-bundle-analyzer dist/assets/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "optimize-images": "imagemin public/images/* --out-dir=public/images/optimized",
    "lighthouse": "lighthouse http://localhost:5173 --output=html --output-path=./performance-reports/lighthouse-report.html --chrome-flags='--headless'",
    "lighthouse:ci": "lighthouse http://localhost:5173 --output=json --output-path=./performance-reports/lighthouse-ci.json --chrome-flags='--headless' --only-categories=performance,accessibility,best-practices,seo,pwa",
    "perf:audit": "npm run lighthouse && npm run build:analyze",
    "seo:audit": "node performance-tests/scripts/seo-audit.js",
    "speed:test": "node performance-tests/scripts/speed-test.js",
    "test:performance": "npm run speed:test && npm run seo:audit"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "axios": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "daisyui": "^5.0.46",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "terser": "^5.36.1",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^0.11.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
